    <link rel="stylesheet" href="/main.css" />
    <title>My Portfolio</title>
  </head>
  <body>
    <div class="container row">
      <div class="container__main">
        <div class="container__main__left left__box">
          <div class="left__box-user mt mt-small">
            <img
              src="/author/Profile.png"
              class="left__box-user--img"
              alt=""
            />
            <h2 class="primary-heading"><%=user.name%></h2>
            <p class="paragraph-text"><%=user.profession%></p>
            <ul class="left__box-user--nav">
              <li class="left__box-user--nav---items">
                <img src="/author/Facebook.svg" class="user__link" alt="" />
              </li>
              <li class="left__box-user--nav---items">
                <img src="/author/Instagram.svg" class="user__link" alt="" />
              </li>
              <li class="left__box-user--nav---items">
                <img src="/author/Twitter.svg" class="user__link" alt="" />
              </li>
              <li class="left__box-user--nav---items">
                <img src="/author/Linkeding.svg" class="user__link" alt="" />
              </li>
              <li class="left__box-user--nav---items">
                <img src="/author/Youtube.svg" class="user__link" alt="" />
              </li>
              <li class="left__box-user--nav---items">
                <img src="/author/Dribbble.svg" class="user__link" alt="" />
              </li>
            </ul>
          </div>
          <div class="left__box-marg"></div>

          <div class="left__box-info mt">
            <div class="left__box-info--left">
              <p class="text-paragraph">Age:</p>
              <p class="text-paragraph">Residence:</p>
              <p class="text-paragraph">Freelance:</p>
              <p class="text-paragraph">Address:</p>
            </div>
            <div class="left__box-info--right">
              <p class="text-data"><%=user.age%></p>
              <p class="text-data"><%=user.residence%></p>
              <p class="text-data active"><%=user.freelance%></p>
              <p class="text-data"><%=user.address%></p>
            </div>
          </div>

          <div class="left__box-marg"></div>
          <div class="left__box-language mt">
            <p class="content">Languages</p>

            <div class="left__box-language--inner">
              <div class="box__inner">
                <div class="left__box-language--inner---row">
                  <p class="paragraph"><%=user.languages[0]%></p>
                  <p class="text">100%</p>
                </div>
                <img
                  src="/author/Line100.svg"
                  alt=""
                  class="left__box-language--inner---img"
                />
              </div>
              <div class="box__inner">
                <div class="left__box-language--inner---row">
                  <p class="paragraph"><%=user.languages[1]%></p>
                  <p class="text">80%</p>
                </div>
                <img
                  src="/author/Line80.svg"
                  alt=""
                  class="left__box-language--inner---img"
                />
              </div>
              <div class="box__inner">
                <div class="left__box-language--inner---row">
                  <p class="paragraph"><%=user.languages[2]%></p>
                  <p class="text">75%</p>
                </div>
                <img
                  src="/author/Line60.svg"
                  alt=""
                  class="left__box-language--inner---img"
                />
              </div>
            </div>
          </div>
          <div class="left__box-marg"></div>
          <div class="left__box-language mt">
            <p class="content">Skills</p>

            <div class="left__box-language--inner">
              <div class="box__inner">
                <div class="left__box-language--inner---row">
                  <p class="paragraph"><%=user.skills[0]%></p>
                  <p class="text">90%</p>
                </div>
                <img
                  src="/author/lines/90Line.svg"
                  alt=""
                  class="left__box-language--inner---img"
                />
              </div>
              <div class="box__inner">
                <div class="left__box-language--inner---row">
                  <p class="paragraph"><%=user.skills[1]%></p>
                  <p class="text">85%</p>
                </div>
